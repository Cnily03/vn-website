---
import Layout from "@/layouts/LayoutPage.astro";
import Page from "@/components/Page.astro";
import { parsedSiteConfig as psc } from "@/site-config";

const conf = await psc.page.join;
const doc_title = [conf.title, await psc.title].filter(Boolean).join(" | ");
---

<Layout title={doc_title} autoHideNav={true} useBg={true} active="join" padTopNav={true}>
    <Page
        title={conf.title}
        subtitle={conf.subtitle}
        anchor={true}
        content={conf.content}
        mdOptions={{ externalLink: true }}
    />
</Layout>

<style lang="scss"></style>
