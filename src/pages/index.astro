---
import Layout from "@/layouts/Layout.astro";
import LogoAnimate from "@/components/LogoAnimate.astro";
---

<Layout title="V&N Team" useBg={true} active="Home" padTopNav={false}>
    <div class="window">
        <div class="container">
            <div class="logo-container">
                <LogoAnimate />
            </div>
        </div>
    </div>
</Layout>

<style lang="scss">
    @import "@/styles/defines.scss";
    .window {
        display: block;
        width: 100%;
        height: 100vh;
        position: absolute;
        top: 0;
        box-sizing: border-box;
    }
    .container {
        $padding-top: 3rem;
        $padding-bottom: 10rem;
        padding: calc($padding-top + $nav-height + $nav-border-width) 0 $padding-bottom;
        height: 100%;
        box-sizing: border-box;
        display: grid;
        place-items: center;
    }
    .logo-container {
        display: block;
        padding: 1rem 1rem 3rem;
        box-sizing: border-box;
        width: max-content;
        margin: 0 auto;
    }
</style>
