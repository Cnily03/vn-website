---
import Layout from "../layouts/Layout.astro";
import LogoAnimate from "@/components/LogoAnimate.astro";
---

<Layout title="V&N Team" useBg={true} active="Home" padTopNav={false}>
    <div class="window">
        <div class="container">
            <div class="logo-container">
                <LogoAnimate />
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="footer-container">
            <span>Copyright (c) V&N Team</span>
            <span><a>Join Us</a></span>
        </div>
    </div>
</Layout>

<style lang="scss">
    @import "@/styles/defines.scss";
    .window {
        display: block;
        width: 100%;
        height: 100vh;
        position: absolute;
        top: 0;
        box-sizing: border-box;
    }
    .container {
        $padding-top: 3rem;
        $padding-bottom: 10rem;
        padding: calc($padding-top + $nav-height + $nav-border-width) 0 $padding-bottom;
        height: 100%;
        box-sizing: border-box;
        display: grid;
        place-items: center;
    }
    .logo-container {
        display: block;
        padding: 1rem 1rem 3rem;
        box-sizing: border-box;
        width: max-content;
        margin: 0 auto;
    }
    .footer {
        display: block;
        position: absolute;
        top: 100vh;
        width: 100%;
        background-color: var(--footer-background-color);
        .footer-container {
            margin: 0 auto;
            padding: 2rem 1rem;
            box-sizing: border-box;
            width: max-content;
            max-width: 100%;
            text-align: justify;
            text-align-last: justify;
            user-select: none;
            & > span {
                letter-spacing: normal;
                user-select: auto;
                display: inline-block;
                margin: 0.2rem 0.75rem;
            }
        }
    }
</style>
